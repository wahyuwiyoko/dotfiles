# Set modifier
set $mod Mod1

# Font for window titles
font pango:Inter Medium 11

# Use $mod+Mouse to drag floating windows
floating_modifier $mod

# Floating windows size
floating_minimum_size 400 x 400
floating_maximum_size 700 x 700

# Kill focused window
bindsym $mod+Shift+q kill

# Adjust volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pipewire -q sset Master 5%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pipewire -q sset Master 5%- unmute
bindsym XF86AudioMute exec --no-startup-id amixer -D pipewire -q sset Master toggle

# Media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Window style
title_align center
hide_edge_borders both
default_border pixel 3
default_floating_border pixel 3
popup_during_fullscreen smart
gaps inner 10
gaps outer 5
smart_borders on
force_display_urgency_hint 5000 ms
focus_follows_mouse no

# Toggle window border
bindsym $mod+b border toggle

# Move tiling windows via drag & drop by modifier and left-clicking
tiling_drag modifier titlebar

# dmenu
bindsym $mod+d exec --no-startup-id dmenu_run -b -nf "#e0def4" -nb "#191724" \
-sb "#c4a7e7" -sf "#191724" -fn "JetBrains Mono-10" -p "dmenu"

# Terminal
bindsym $mod+Return exec --no-startup-id alacritty

# Browser
bindsym $mod+Shift+f exec --no-startup-id firefox
bindsym $mod+Shift+p exec --no-startup-id firefox --private-window

# Dunst
bindsym $mod+Shift+d exec --no-startup-id killall dunst; \
exec --no-startup-id dunst &; exec --no-startup-id notify-send "Restart Dunst"
bindsym Ctrl+BackSpace exec --no-startup-id dunstctl history-pop
bindsym Ctrl+space exec --no-startup-id dunstctl close
bindsym $mod+x exec --no-startup-id dunstctl close-all

# Screenshoter
bindsym Print exec --no-startup-id flameshot launcher

# Change focused window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Alternatively, can use the cursor keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Alternatively, can use the cursor keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Splitting containers
bindsym $mod+s split toggle

# Enter fullscreen mode for focused container
bindsym F11 fullscreen toggle

# Change container layout
bindsym $mod+w layout toggle

# Toggle tiling or floating
bindsym $mod+Shift+space floating toggle

# Change focus between tiling or floating windows
bindsym $mod+space focus mode_toggle

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Focus the parent or child container
bindsym $mod+p focus parent
bindsym $mod+c focus child

# Names for default workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace
bindsym $mod+Shift+r restart

# Screen brightness controls
bindsym $mod+Delete exec --no-startup-id brightnessctl -q s +5% # Increase brightness
bindsym $mod+BackSpace exec --no-startup-id brightnessctl -q s 5%- # Decrease brightness

# Resize window
bindsym $mod+r mode "resize"

mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  # Same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # Back to normal
  bindsym Escape mode "default"
}

# System mode
set $mode_system System: (l)ogout, (s)uspend, (h)ibernate, (r)eboot, (p)oweroff
set $lock i3lock -c 191724

bindsym $mod+Shift+e mode "$mode_system"

mode "$mode_system" {
  bindsym l exec --no-startup-id loginctl terminate-user $USER, mode "default"
  bindsym s exec --no-startup-id systemctl suspend && $lock, mode "default"
  bindsym h exec --no-startup-id systemctl hibernate && $lock, mode "default"
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym p exec --no-startup-id systemctl poweroff, mode "default"

  # Back to normal
  bindsym Escape mode "default"
}

# Enable floating dialogs application window
for_window [window_role="About"] floating enable
for_window [window_role="Organizer"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="page-info"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="toolbox"] floating enable
for_window [window_role="webconsole"] floating enable
for_window [window_role="dialog"] floating enable
for_window [window_role="menu"] floating enable

# Toggle hide or show status bar
bindsym $mod+m bar mode toggle

set $base #191724
set $surface #1f1d2e
set $overlay #26233a
set $muted #6e6a86
set $subtle #908caa
set $text #e0def4
set $love #eb6f92
set $gold #f6c177
set $rose #ebbcba
set $pine #31748f
set $foam #9ccfd8
set $iris #c4a7e7
set $highlight #524f67

# Start i3bar to display a workspace bar
bar {
  status_command i3status
  position top
  tray_output none
  font pango:JetBrains Mono 11
  separator_symbol " | "
  padding 3px 10px 3px 0
  workspace_min_width 25

  colors {
    background $base
    statusline $text
    separator  $highlight

    # Class            Border   Bground  Text
    focused_workspace  $iris    $iris    $base
    active_workspace   $iris    $iris    $base
    inactive_workspace $overlay $overlay $text
    urgent_workspace   $love    $love    $base
    binding_mode       $rose    $rose    $base
  }
}

# Class                 Border   Bground  Text  Indicator Child_border
client.focused          $iris    $iris    $base $iris     $iris
client.focused_inactive $surface $surface $text $surface  $surface
client.unfocused        $surface $surface $text $surface  $surface
client.urgent           $love    $love    $base $love     $love
client.placeholder      $base    $base    $text $base     $base
client.background       $base
