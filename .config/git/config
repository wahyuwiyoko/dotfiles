[user]
  name =
  email =
  signingKey =

[core]
  editor = nvim

[init]
  defaultBranch = main

[commit]
  gpgSign = true
  template = ~/.config/git/commit-template.txt

[merge]
  tool = nvimdiff
  conflictstyle = diff3

[alias]
  st = status
  cm = commit
  ptc = add --patch
  unstage = restore --staged
  amend = commit --amend --no-edit
  pf = push --force-with-lease
  ds = diff --staged
  onel = log --oneline
  graph = log --all --oneline --decorate --graph
  branch-verbose = branch -vv
  diff-words = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
