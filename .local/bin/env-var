#!/bin/sh

# XDG base directory
XDG_CONFIG_HOME="$HOME/.config"
XDG_CACHE_HOME="$HOME/.cache"
XDG_DATA_HOME="$HOME/.local/share"
XDG_STATE_HOME="$HOME/.local/state"

# Dotfiles migration
HISTFILE="$XDG_STATE_HOME/bash/history"
LESSHISTFILE="$XDG_STATE_HOME/less/history"
GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
PASSWORD_STORE_DIR="$XDG_DATA_HOME/pass"
PSQL_HISTORY="$XDG_DATA_HOME/psql_history"
XCURSOR_PATH="$XDG_DATA_HOME/icons"
GOPATH="$XDG_DATA_HOME/go"
GNUPGHOME="$XDG_DATA_HOME/gnupg"
NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"
NODE_REPL_HISTORY="$XDG_DATA_HOME/node_repl_history"

# General
EDITOR="nvim"
BROWSER="firefox --private-window"
PATH="$PATH:$HOME/.local/bin:$GOPATH/bin:$XDG_DATA_HOME/npm/bin"
FZF_DEFAULT_COMMAND="fdfind"
FZF_DEFAULT_OPTS="
  --color=fg:#908caa,bg:#191724,hl:#ebbcba
  --color=fg+:#e0def4,bg+:#26233a,hl+:#ebbcba
  --color=border:#403d52,header:#31748f,gutter:#191724
  --color=spinner:#f6c177,info:#9ccfd8,separator:#403d52
  --color=pointer:#c4a7e7,marker:#eb6f92,prompt:#908caa
"

# Export environment variables
export XDG_CONFIG_HOME XDG_CACHE_HOME XDG_DATA_HOME XDG_STATE_HOME
export HISTFILE LESSHISTFILE GTK2_RC_FILES PASSWORD_STORE_DIR PSQL_HISTORY
export XCURSOR_PATH GOPATH GNUPGHOME NPM_CONFIG_USERCONFIG NODE_REPL_HISTORY
export EDITOR BROWSER PATH FZF_DEFAULT_COMMAND FZF_DEFAULT_OPTS
